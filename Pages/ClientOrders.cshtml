@page
@model NomNom.Web.Pages.ClientOrdersModel
@{
    ViewData["Title"] = "Your Orders";
}

<h2>Your Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Status</th>
            <th></th> <!-- Column for the delete button -->
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.Status</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@order.OrderId">
                        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this order?');" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>