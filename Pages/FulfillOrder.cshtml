@page
@model NomNom.Web.Pages.FulfillOrderModel
@{
    ViewData["Title"] = "Fulfill Order";
}

<div class="container mt-5">
    <h2 class="mb-4">Order #@Model.Order.OrderId</h2>

    <div class="card">
        <div class="card-header">
            <strong>Status:</strong> @Model.Order.Status
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                @foreach (var grilledCheese in Model.Order.GrilledCheeses)
                {
                    <li class="list-group-item">Grilled Cheese #@grilledCheese.GrilledCheeseId</li>
                }
            </ul>
            <form method="post" asp-route-id="@Model.Order.OrderId" class="mt-3">
                <input type="submit" value="Complete Order" class="btn btn-primary" @(Model.Order.Status == "Complete" ? "disabled" : "") />
            </form>
        </div>
    </div>
</div>

